!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Stickers
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    %link{ rel: "stylesheet", href: "https://cdnjs.cloudflare.com/ajax/libs/normalize/3.0.2/normalize.css"}
    %link{ rel: "stylesheet", href: "//maxcdn.bootstrapcdn.com/bootstrap/3.3.4/css/bootstrap.min.css"}
    = csrf_meta_tags
  %body
    %header
      .wrapper.clearfix
        #logo= link_to "Stickers", root_path
        %nav
          - if user_signed_in?
            = link_to current_user.name, edit_user_registration_path
            = link_to "Sign out", destroy_user_session_path
            = link_to "Add New Stickers", new_article_path, class: "button"
          - else
            = link_to "Sign up", new_user_registration_path, class: "button"
            = link_to "Sign in", new_user_session_path, class: "button"

    %p.notice= notice
    %p.alert= alert
    = yield
